<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>{% block title %}Welcome!{% endblock %}</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
		  integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css"
		  integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

	{% block stylesheets %}
		{{ encore_entry_link_tags('app') }}
	{% endblock %}
</head>
<body>
<header>{% if app.user %}


		<ul class="nav justify-content-end">
			<li class="nav-item">
				<a class="nav-link active" href="#">{{ app.user.username }} <i class="fas fa-user"></i></a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="{{ path('admin') }}">Administration</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i></a>
			</li>

		</ul>
	{% else %}
		<ul class="nav justify-content-end">
			<li class="nav-item">
				<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="{{ path('security_registration') }}">S'enregistrer</a>
			</li>
		</ul>
	{% endif %}
</header>

<div class="header_img">
	<img src="{{ asset('build/logo.png') }}" alt="">
</div>

<div class="container menu ">

	<nav class="navbar navbar-expand-lg ">

		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
				aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
			<i class="fas fa-bars"></i>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavDropdown">
			<ul class="navbar-nav">
				<li class="nav-item">
					{#<a class="nav-link up" href="{{ path('home') }}">Acceuil</a>#}

				</li>
				<li class="nav-item">
					<a class="nav-link up" href="{{ path('blog') }}">Blog</a>
				</li>

				<li class="nav-item">
					<a class="nav-link up" href="#">Pricing</a>
				</li>
				<li class="nav-item dropdown">
					<a class="nav-link  up" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
					   aria-haspopup="true" aria-expanded="false">
						News
					</a>
					<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
						{#Menu dropdown#}
					</div>
				</li>
			</ul>
		</div>
	</nav>
</div>
<div class="container">
	{% block body %}{% endblock %}
</div>
{% block javascripts %}
	{{ encore_entry_script_tags('app') }}
	<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
{% endblock %}

</body>
</html>
